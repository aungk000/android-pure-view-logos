<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Logos" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <!-- action color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background color -->
        <item name="android:colorBackground">@color/grey_dark</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- toolbar color -->
        <item name="colorSurface">@color/grey_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- button color -->
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- status color -->
        <item name="android:statusBarColor">@color/grey_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- menu icon color -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>